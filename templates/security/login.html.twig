{% extends 'template.html.twig' %}

{% block title %}Kaëlysse Couture - Connextion{% endblock %}

{% block body %}

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                {{ include('flash.html.twig') }}
                {% if error %}
                <div class="alert alert-danger mt-5">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
                {% endif %}
                <div class="contact-form">
                    <form id= "contact" action="{{ path('app_login') }}" method="post">
                        <div class="col-lg-12">
                            <h4>Se Connecter</h4>
                        </div>
                        <div class="col-lg-12">
                            <label for="username">Email:</label>
                            <input type="text" id="username" name="_username" placeholder="example@kaëlysse-couture.com" value="{{ last_username }}" required>
                        </div>
                        <div class="col-lg-12">
                            <label for="password">Password:</label>
                            <input type="password" id="password" placeholder="********"  name="_password" required>
                        </div>
                        {# If you want to control the URL the user is redirected to on success #}
                        <input type="hidden" name="_target_path" value="/user">
                        <div class="col-lg-12 mt-4">
                            <button type="submit" class="main-button-icon">Se Connecter</button>
                        </div>
                    </form>
                    <a href="{{ path('app_registration') }}">Créer un compte</a>
                    <a href="{{ path('app_home') }}">Retour à l'acceuil</a>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
