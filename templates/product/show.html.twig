{% extends 'template.html.twig' %}

{% block body %}
{% include "nav.html.twig" %}
<section class="section" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-xs-12 d-flex flex-column justify-content-between">
                <div class="left-text-content mb-3">
                    <div class="section-heading">
                        <h6>Nos Produits</h6>
                        <h2>{{ product.name }}</h2>
                        <h4 class="p-1">{{ product.price }} â‚¬</h4>
                    </div>
                    <p>{{ product.description }}</p>
                    <div class="row">
                        <!-- Thumbnail images with a common class for selection -->
                        <div class="col-4">
                            <img src="{{ asset('assets/images/about-thumb-01.jpg') }}" class="thumbnail" alt="">
                        </div>
                        <div class="col-4">
                            <img src="{{ asset('assets/images/about-thumb-02.jpg') }}" class="thumbnail" alt="">
